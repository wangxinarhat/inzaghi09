<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        style="@style/TitleStyle"
        android:text="设置中心" />

    <com.milan.inzaghi09.view.SettingItemView
        android:id="@+id/siv_update"
        xmlns:inzaghi09="http://schemas.android.com/apk/res/com.milan.inzaghi09"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        inzaghi09:destitle = "自动更新设置"
        inzaghi09:deson = "自动更新已开启"
        inzaghi09:desoff = "自动更新已关闭"
        >
        </com.milan.inzaghi09.view.SettingItemView>
    <com.milan.inzaghi09.view.SettingItemView
        android:id="@+id/siv_show_phone_address"
        xmlns:inzaghi09="http://schemas.android.com/apk/res/com.milan.inzaghi09"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        inzaghi09:destitle = "电话归属地显示设置"
        inzaghi09:deson = "电话归属地显示已开启"
        inzaghi09:desoff = "电话归属地显示已关闭"
        >
    </com.milan.inzaghi09.view.SettingItemView>
    <com.milan.inzaghi09.view.SettingItemAddressView
        android:id="@+id/siav_address_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
    </com.milan.inzaghi09.view.SettingItemAddressView>
    <com.milan.inzaghi09.view.SettingItemAddressView
        android:id="@+id/siav_address_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        >
    </com.milan.inzaghi09.view.SettingItemAddressView>
    <com.milan.inzaghi09.view.SettingItemView
        android:id="@+id/siv_blacklist"
        xmlns:inzaghi09="http://schemas.android.com/apk/res/com.milan.inzaghi09"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        inzaghi09:destitle = "黑名单拦截设置"
        inzaghi09:deson = "黑名单拦截已开启"
        inzaghi09:desoff = "黑名单拦截已关闭"
        >
        </com.milan.inzaghi09.view.SettingItemView>

</LinearLayout>